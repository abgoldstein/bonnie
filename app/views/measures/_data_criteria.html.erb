<div class="paramChildren newDataCriteria_children" style="background-color: #F5F5F5; display: block;">
  <div class="paramItem">
    <div draggable="true" class="paramText" id="MeasurePeriod">
      <label>Measurement Period</label>
    </div>
  </div>
</div>
<% criteria_by_category.keys.each do |category| %>
  <div class="paramGroup" data-category="<%= category.gsub(' ', '_') %>">
    <div class="paramItem">
      <div class="paramText <%= dc_category_style(category.gsub(' ', '_')) %>">
        <label><i class="icon-chevron-right"></i><%= category.titleize %> (<span><%= criteria_by_category[category].length %></span>)</label>
      </div>
    </div>
  </div>

  <div class="paramChildren <%= category.gsub(' ', '_') %>_children" style="background-color: #F5F5F5;">
    <% criteria_by_category[category].each do |criteria| %>
    <div class="paramItem">
      <div class="paramText">
        <label data-criteria-id="<%= criteria['criteria_id'] %>"><%= criteria['title'] %><%= ": #{criteria['status']}" if !criteria['status'].blank? %></label>
      </div>
    </div>
    <% end %>
  </div>

<% end %>
<div class="paramGroup" data-category="newDataCriteria">
  <div class="paramItem">
    <div class="paramText">
      <label>Add New Data Criterion</label>
    </div>
  </div>
</div>
<div class="paramChildren newDataCriteria_children" style="background-color: #F5F5F5;">
  <div class="paramItem">
    <div class="paramText">
      <form method="GET" action="<%= url_for :action => 'upsert_criteria' %>" onsubmit="return !$(this).ajaxSubmit(bonnie.builder.addDataCriteria);">
        <label>criteria_id <input name="criteria_id" /></label>
        <label>title <input name="title" /></label>
        <label>standard_category <input name="standard_category" /></label>
        <label>qds_data_type <input name="qds_data_type" /></label>
        <label>code_list_id <input name="code_list_id" /></label>
        <label>property <input name="property" /></label>
        <label>type <input name="type" /></label>
        <label>status <input name="status" /></label>
        <input type="hidden" name="measure" value="<%= params[:id] %>" />
        <label><input type="submit" value="Create" /></label>
      </form>
    </div>
  </div>
</div>
