<% criteria_by_category.keys.each do |category| %>
  <div class="paramGroup" data-category="<%= category %>">
    <div class="paramItem">
      <div class="paramText <%= dc_category_style(category) %>">
        <label><%= category.titleize %></label>
      </div>
    </div>
  </div>

  <div class="paramChildren <%= category %>_children" style="background-color: #F5F5F5;">
    <% criteria_by_category[category].each do |criteria| %>
    <div class="paramItem">
      <div class="paramText">
        <label><%= criteria['title'] %><%= ": #{criteria['status']}" if criteria['status'] %></label>
      </div>
    </div>
    <% end %>
  </div>

<% end %>
