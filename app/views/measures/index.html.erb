
<% content_for :left_column do %>
  <%= render :partial => 'shared/left_navigation' %>
<% end -%>

<% content_for :right_column do %>
	<h1><%= current_user.first_name %>'s measures</h1>

	<table>
	  <tr>
	    <th>Title</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>

	<% @measures.each do |measure| %>
	  <tr>
	    <td><%= measure.title %></td>
	    <td><%= link_to 'Show', measure %></td>
	    <td><%= link_to 'Edit', edit_measure_path(measure) %></td>
	    <td><%= link_to 'Destroy', measure, confirm: 'Are you sure?', method: :delete %></td>
	  </tr>
	<% end %>
	</table>

	<br />

	<%= link_to 'Export All', export_all_measures_path %> |
	<%= link_to 'New Measure', new_measure_path %>
<% end -%>
  
